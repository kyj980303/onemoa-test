  <insert id="insert" parameterType="contest"
          useGeneratedKeys="true" keyColumn="bno" keyProperty="no">
    insert into app_board(title,cont,mno) 
    values(#{title},#{content},#{writer.no})
  </insert>
  
  <update id="update" parameterType="contest">
    update app_board set 
      title=#{title}, 
      cont=#{content} 
    where bno=#{no}
  </update>
  
  <delete id="delete">
    delete from app_board 
    where bno=#{value}
  </delete>
